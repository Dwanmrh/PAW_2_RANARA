<link rel="stylesheet" href="/styles/style.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>

<div class="container-login mt-5">
  <div class="card-login p-4 d-flex flex-row">
    <div class="card-left">
      <img src="/images/4.png" alt="Film clapperboard and reels on a blue background" class="login-img"/>
    </div>
    <div class="card-right">
      <h1 class="text-center mb-4">Login</h1>
      <form action="/login" method="POST">
        <div class="mb-3 position-relative">
          <i class="fas fa-user position-absolute" style="left: 10px; top: 50%; transform: translateY(-50%); color: #000;"></i>
          <input type="text" class="form-control pl-5" id="username" name="username" placeholder="Username" required style="padding-left: 40px;"/>
        </div>
        <div class="mb-3 position-relative">
          <i class="fas fa-lock position-absolute" style="left: 10px; top: 50%; transform: translateY(-50%); color: #000;"></i>
          <input type="password" class="form-control pl-5" id="password" name="password" placeholder="Password" required style="padding-left: 40px;"/>
        </div>
        <button type="submit" class="btn-login btn-primary btn-block">Login</button>
      </form>
      <p class="mt-3 text-right">
        Belum punya akun? <a href="/signup">Daftar di sini</a>.
      </p>
    </div>
  </div>
</div>
