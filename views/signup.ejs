<link rel="stylesheet" href="/styles/style.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>

<div class="container-signup mt-5">
  <div class="card-signup p-4 d-flex flex-row">
    <!-- Left side card (image) -->
    <div class="card-left">
      <img src="/images/4.png" alt="Clapperboard and film reels on a blue background" style="width: 100%; height: 100%; object-fit: cover; border-radius: 10px;">
    </div>
    
    <!-- Right side card (form) -->
    <div class="card-right">
      <h1 class="text-center mb-4">Sign Up</h1>
      <form action="/signup" method="POST">
        <div class="mb-3 position-relative">
          <i class="fas fa-user position-absolute" style="left: 10px; top: 50%; transform: translateY(-50%); color: #000;"></i>
          <input 
          type="text" 
          class="form-control pl-5" 
          id="nama" 
          name="nama"
          placeholder="Nama"   
          required style="padding-left: 40px;"/>
        </div>
        <div class="mb-3 position-relative">
          <i class="fas fa-user position-absolute" style="left: 10px; top: 50%; transform: translateY(-50%); color: #000;"></i>
          <input 
          type="text" 
          class="form-control pl-5" 
          id="username" 
          name="username"
          placeholder="Username" 
          required style="padding-left: 40px;" />
        </div>
        <div class="mb-3 position-relative">
          <i class="fas fa-lock position-absolute" style="left: 10px; top: 50%; transform: translateY(-50%); color: #000;"></i>
          <input 
          type="password" 
          class="form-control pl-5" 
          id="password" 
          name="password"
          placeholder="Password"  
          required style="padding-left: 40px;"/>
        </div>
        <div class="mb-3 position-relative">
          <i class="fas fa-envelope position-absolute" style="left: 10px; top: 50%; transform: translateY(-50%); color: #000;"></i>
          <input 
          type="email" 
          class="form-control pl-5" 
          id="email" 
          name="email"
          placeholder="Email"   
          required style="padding-left: 40px;"/>
        </div>
        <button type="submit" class="btn-signup btn-primary btn-block">Sign Up</button>
      </form>
      <p class="mt-3 text-right-signup">Sudah punya akun? <a href="/login">Masuk</a>.</p>
    </div>
  </div>
</div>
