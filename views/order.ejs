
  <body>
    <div class="container py-5">
      <h1 class="text-center mb-4 custom-heading">Form Order</h1>
      <div class="text-center mt-4">
        <img
          src="/images/KursiBioskop.jpg"
          alt="Gambar Kursi Bioskop"
          class="img-fluid"
          style="max-width: 100%; height: auto; max-height: 500px"
        />
      </div>
    </div>
    <form action="/order" method="POST" class="bg-light p-4 rounded shadow-sm">
      <div class="mb-3">
        <label for="name" class="form-label">Nomor Kursi:</label>
        <input
          type="text"
          id="name"
          name="name"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="movie" class="form-label">Judul Film:</label>
        <select id="movie" name="movie" class="form-select" required>
          <% films.forEach((film) => { %>
          <option value="<%= film.title %>"><%= film.title %></option>
          <% }); %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary w-100">Order</button>
    </form>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
