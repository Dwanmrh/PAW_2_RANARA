      // Handle Delete Film
      $(".deleteBtn").on("click", function () {
        const id = $(this).data("id_film");

        $.ajax({
          url: "/delete/films/" + id,
          type: "DELETE",
          success: function () {
            location.reload(); // Reload page after deletion
          },
          error: function (error) {
            console.error("Error deleting film:", error.responseText);
          },
        });
      });
    });
  </script>

</body>
</html>
